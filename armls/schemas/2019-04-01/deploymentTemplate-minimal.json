{
  "id": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Template",
  "description": "An Azure deployment template - minimal version",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },
    "contentVersion": {
      "type": "string",
      "pattern": "(^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+$)",
      "description": "A 4 number format for the version number of this template file. For example, 1.0.0.0"
    },
    "resources": {
      "type": "array",
      "description": "Collection of resources to be deployed",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the resource"
          },
          "type": {
            "type": "string", 
            "description": "Resource type"
          }
        },
        "required": ["name", "type"],
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "contentVersion", 
    "resources"
  ]
}